{
    "openapi": "3.0.1",
    "info": {
        "title": "FaleMais Calculator",
        "description": "LOLDESIGN showMeTheCode",
        "contact": {
            "name": "Gustavo Melo",
            "url": "https://github.com/gustavohmbarbosa",
            "email": "gustavobarbosa-18@hotmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://127.0.0.1:{port}/api/{version}",
            "description": "The localhost API server",
            "variables": {
                "port": {
                    "enum": [
                        "8000",
                        "3000"
                    ],
                    "default": "8000"
                },
                "version": {
                    "enum": [
                        "v1"
                    ],
                    "default": "v1"
                }
            }
        }
    ],
    "paths": {
        "/codes": {
            "get": {
                "tags": ["codes"],
                "description": "List all codes.",
                "responses": {
                    "200": {
                        "description": "Returns all codes.",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Code"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/codes/{code}/available-destinations": {
            "get": {
                "tags": ["codes"],
                "description": "Get available destinations by a origin code.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "code",
                        "description": "A code",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "015"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns available codes.",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Code"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "The given code does not exist."
                    }
                }
            }
        },
        "/call_prices": {
            "get": {
                "tags": ["call prices"],
                "description": "List all call prices.",
                "responses": {
                    "200": {
                        "description": "Returns all call prices.",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/CallPrice"
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/call-prices/{origin}/{destiny}/rate-per-minute": {
            "get": {
                "tags": ["call prices"],
                "description": "Get the rate value for the origin and destination provided.",
                "parameters": [
                    {
                        "in": "path",
                        "name": "origin",
                        "description": "The origin code",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "234"
                        }
                    },
                    {
                        "in": "path",
                        "name": "destiny",
                        "description": "The destiny code",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "example": "567"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Returns the rate.",
                        "content": {
                            "application/json": {
                                "schema":{
                                    "type": "number",
                                    "format": "float",
                                    "example": 1.95
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "Rate not found."
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Code": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "code": {
                        "type": "string",
                        "example": "015"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-05-01T22:15:51.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-05-01T22:15:51.000000Z"
                    }
                }
            },
            "CallPrice": {
                "type": "object",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "origin": {
                        "type": "object",
                        "$ref": "#/components/schemas/Code"
                    },
                    "destiny": {
                        "type": "object",
                        "$ref": "#/components/schemas/Code"
                    },
                    "rate_per_minute": {
                        "type": "number",
                        "format": "float",
                        "example": 1.95
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-05-01T22:15:51.000000Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2022-05-01T22:15:51.000000Z"
                    }
                }
            }
        }
    }
}
